<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/verdeFondo3" />
            <stroke
                android:width="1dp"
                android:color="@color/verdeFondo3" />
            <corners
                android:radius="10dp" />           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/verdeFondo3"
                android:endColor="@color/verdeFondo2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/verdeFondo3" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>