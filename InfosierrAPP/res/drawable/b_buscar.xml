<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/grisClaro" />
            <stroke
                android:width="2dp"
                android:color="@color/grisOscuro" />
            <corners
                android:radius="20dp" />           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/grisClaro"
                android:endColor="@color/grisOscuro"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grisOscuro" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>
</selector>