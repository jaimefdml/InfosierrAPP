<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/maroon" />            
            <stroke
                android:width="1dp"
                android:color="@color/maroon" />
            <corners
                android:radius="5dp" />           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/maroon"
                android:endColor="@color/grisOscuro"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/maroon" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>